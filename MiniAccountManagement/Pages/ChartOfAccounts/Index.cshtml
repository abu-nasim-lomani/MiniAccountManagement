@page
@model MiniAccountManagement.Pages.ChartOfAccounts.IndexModel
@{
    ViewData["Title"] = "Chart of Accounts";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>@ViewData["Title"]</h1>
    <a href="#" class="btn btn-primary">Create New Account</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Account Code</th>
            <th>Account Name</th>
            <th style="width: 15%;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @* We will show a message if there are no accounts to display *@
        @if (Model.Accounts == null || !Model.Accounts.Any())
        {
            <tr>
                <td colspan="3" class="text-center">No accounts found. Please create one.</td>
            </tr>
        }
        else
        {
            @* Loop through each account in the list and create a table row for it *@
            @foreach (var account in Model.Accounts)
            {
                <tr>
                    <td>@account.AccountCode</td>
                    <td>@account.AccountName</td>
                    <td>
                        @* Action buttons will go here later *@
                        <a href="#" class="btn btn-sm btn-info">Edit</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>