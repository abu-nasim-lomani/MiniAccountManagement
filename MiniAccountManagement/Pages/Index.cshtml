@page
@model IndexModel
@{
    // The logic to select the correct layout file
    if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        Layout = "_Layout";
    }
    else
    {
        Layout = "_PublicLayout";
    }

    ViewData["Title"] = User.Identity.IsAuthenticated ? "Dashboard" : "Welcome";
}

@* Now, render the correct content partial view based on login status *@
@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <partial name="_DashboardPartial" />
}
else
{
    <partial name="_LandingPagePartial" />
}