@page
@model IndexModel
@{
    if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        Layout = "_Layout";
    }
    else
    {
        Layout = "_PublicLayout";
    }

    ViewData["Title"] = User.Identity.IsAuthenticated ? "Dashboard" : "Welcome";
}

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <partial name="_DashboardPartial" model="Model" />
}
else
{
    <partial name="_LandingPagePartial" />
}