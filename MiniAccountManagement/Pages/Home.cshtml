@page "/"
@model LandingModel
@{
    // This tells the Landing page to use _PublicLayout as its template.
    // The path should be just the name, not the full path.
    Layout = "/Pages/Shared/_PublicLayout.cshtml";
}

<div class="text-center">
    <div class="p-5 mb-3 bg-light rounded-3">
        <div class="container-fluid py-2">
            <h1 class="display-5 fw-bold">Welcome to Mini Account Management</h1>
            <p class="fs-4">A simple, robust, and modern solution to manage your daily financial transactions with ease.</p>
            <a class="btn btn-primary btn-md" asp-area="Identity" asp-page="/Account/Login">Login</a>
            <a class="btn btn-secondary btn-md" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </div>
    </div>

    <div class="row align-items-md-stretch">
        <div class="col-md-4">
            <div class="h-100 p-3 text-white bg-dark rounded-3">
                <h2><i class="fas fa-sitemap mb-2"></i></h2>
                <h4>Chart of Accounts</h4>
                <p>Manage your financial accounts with a clean, hierarchical tree view.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="h-100 p-3 bg-light border rounded-3">
                <h2><i class="fas fa-file-invoice-dollar mb-2"></i></h2>
                <h4>Voucher Entry</h4>
                <p>Record your daily transactions with our dynamic multi-line voucher entry form.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="h-100 p-3 text-white bg-dark rounded-3">
                <h2><i class="fas fa-users-cog mb-2"></i></h2>
                <h4>User Management</h4>
                <p>Manage users and their roles with a secure and powerful admin panel.</p>
            </div>
        </div>
    </div>
</div>